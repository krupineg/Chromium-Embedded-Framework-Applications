<Window x:Class="WpfDotNetBrowserApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfDotNetBrowserApp"
        mc:Ignorable="d"
        Name="_window"
        Title="MainWindow" Height="350" Width="525">
    <Grid x:Name="_grid">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Button Width="100" HorizontalAlignment="Left" Command="{Binding TakeScreenshotCommand}">Take screenshot</Button>
        <local:LazyBrowser Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Browser="{Binding Browser}"/>
    </Grid>
</Window>
